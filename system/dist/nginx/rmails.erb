server {
  server_name <%= hostname %> www.<%= hostname %> ;

  access_log /var/www/<%= hostname %>/log/access.log;

  root /var/www/<%= hostname %>/public;

  if ($host = '<%= prefer_www ? '' : 'www.' %><%= hostname %>' ) {
    rewrite  ^/(.*)$  http://<%= prefer_www ? 'www.' : '' %><%= hostname %>/$1  permanent;
  }

  location ~* \.(gz|ico|pdf|jpg|jpeg|gif|png|css|js|swf|html)$ {
    if (-f $request_filename) {
      expires max;
      break;
    }
  }

  passenger_enabled on;
#    passenger_use_global_queue on;

  rails_env production;

  error_page   500 502 504  /500.html;

  if ($request_method !~ ^(GET|HEAD|PUT|POST|DELETE|OPTIONS)$ ){
    return 405;
  }
}
